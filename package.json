{
  "dependencies": {
    "@prisma/client": "5.2.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "joi": "^17.10.0",
    "jsonwebtoken": "^9.0.1",
    "nodemailer": "^6.9.4",
    "prisma": "^5.2.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
